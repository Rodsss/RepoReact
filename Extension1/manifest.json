{
  "manifest_version": 3,
  "name": "Project 1",
  "version": "1.1.0",
  "description": "A browser extension for Project 1.",
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "tabs"
  ],
  "background": {
    "service_worker": "scripts/background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["scripts/content.js"],
      "css": ["css/content.css"]
    }
  ],
  "web_accessible_resources": [{
    "resources": ["images/icon-16.png"],
    "matches": ["<all_urls>"]
  }],
  "action": {
    "default_popup": "html/options.html",
    "default_icon": { "16": "images/icon-16.png" }
  }
}